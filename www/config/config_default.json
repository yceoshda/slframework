{
    //  DO NOT EDIT THIS FILE
    //  override the values in a new config.json file
    //  site title
    "title"             : "SpaceLife Framework",

    //  admin title
    "admin_title"       : "ADMIN::SpaceLife Framework",

    //  site url (usefull for email and external redirections)
    "siteUrl"           : "http://slframework.local",

    //  Log
    "log" : {
        "enable"        : false,
        "logfile"       : "logs/slf.log",
    },

    //  restrict controller load to declared routes (hack for namespace)
    "restrict_to_routes": true,

    //  allowed languages
    "langs"             : ["fr", "en"],

    //  default fallback language
    "default_lang"      : "fr",

    //  default translation files path
    "translationPath"   : "vendor/spacelife/translation",

    //  Google Analytics integration
    "googleAnalytics"   : {
        "enabled"        : false,
        "id"             : false,
        "url"            : false,
        "cnil"           : true,
        "can_deny"       : true,
        "cookie_duration": 365
    },

    //  rules to handle passwords
    "passwordRules"     : {
        "lockDown"  : 3600,
        "maxRetry"  : 5,
        "stickyLock": false
    },

    //  Facebook config
    "facebook": {
        "enable"   : false,
        "appId"    : false,
        "appSecret": false
    },

    //  reset password link availability
    "resetEnabled"      : true,
    "resetLinkValidity" : 3600,

    //  debug
    "perf_debug"        : false,
    "debug_trace"       : false,

    //  database params
    "database"          : {
        "server"    : "localhost",
        "user"      : "slf",
        "password"  : "slf",
        "database"  : "slf"
    },

    //  mail params
    "mail": {
        "server"    : "localhost",
        "serverPort": 25,
        "from"      : "from@example.com",
        "from_name" : "Space Control",
        "replyTo"   : "from@example.com",
        "maxRcpt"   : 10
    },

    //  cache settings
    "cache": {
        "directory"   : "cache",
        "default_type": "cache",
        "ttl"         : 86400,
        "status"      : {
            "good"   : "success",
            "old"    : "warning",
            "expired": "danger"
        }
    },

    //  session config
    "session": {
        "name": "SLFSESSID"
    }
}